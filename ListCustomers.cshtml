@model IEnumerable<BerberWebSitesi.Models.Customer>

<h2>Müşteri Listesi</h2>

<table>
    <thead>
        <tr>
            <th>Ad</th>
            <th>Soyad</th>
            <th>Telefon</th>
            <th>Email</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model)
        {
            <tr>
                <td>@customer.FirstName</td>
                <td>@customer.LastName</td>
                <td>@customer.Phone</td>
                <td>@customer.Email</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@customer.Id">Düzenle</a> |
                    <a asp-action="Delete" asp-route-id="@customer.Id">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
