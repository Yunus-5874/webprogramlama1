@model BerberWebSitesi.Models.Appointment

@{
    ViewData["Title"] = "Randevu Al";
}

<div class="container mt-5">
    <h1>Randevu Al</h1>
    <form asp-action="Create" method="post">
        <div class="form-group">
            <label for="CustomerId">Müşteri</label>
            <select id="CustomerId" name="CustomerId" class="form-control" required>
                @foreach (var customer in ViewBag.Customers as List<BerberWebSitesi.Models.Customer>)
                {
                    <option value="@customer.Id">@customer.FirstName @customer.LastName</option>
                }
            </select>
        </div>

        <div class="form-group">
            <label for="ServiceId">Hizmet</label>
            <select id="ServiceId" name="ServiceId" class="form-control" required>
                @foreach (var service in ViewBag.Services as List<BerberWebSitesi.Models.Service>)
                {
                    <option value="@service.Id">@service.Name (@service.Duration.TotalMinutes dakika, @service.Price ₺)</option>
                }
            </select>
        </div>

        <div class="form-group">
            <label for="EmployeeId">Çalışan</label>
            <select id="EmployeeId" name="EmployeeId" class="form-control" required>
                @foreach (var employee in ViewBag.Employees as List<BerberWebSitesi.Models.Employee>)
                {
                    <option value="@employee.Id">@employee.FirstName @employee.LastName</option>
                }
            </select>
        </div>

        <div class="form-group">
            <label for="Date">Tarih</label>
            <input type="date" id="Date" name="Date" class="form-control" required />
        </div>

        <div class="form-group">
            <label for="StartTime">Başlangıç Saati</label>
            <input type="time" id="StartTime" name="StartTime" class="form-control" required />
        </div>

        <button type="submit" class="btn btn-primary mt-4">Randevu Oluştur</button>
    </form>
</div>
