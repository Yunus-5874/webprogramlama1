@model IEnumerable<BerberWebSitesi.Models.Employee>

@{
    ViewData["Title"] = "Admin Paneli - Çalışan Yönetimi";
}

<div class="container mt-5">
    <h1>Admin Paneli - Çalışan Yönetimi</h1>

    <a href="/Admin/AddEmployee" class="btn btn-primary mb-3">Yeni Çalışan Ekle</a>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>İsim</th>
                <th>Soyisim</th>
                <th>Telefon</th>
                <th>Email</th>
                <th>Yaptığı İşler</th>
                <th>Çalışma Günleri</th>
                <th>Çalışma Saatleri</th>
                <th>İzin Günleri</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
                <tr>
                    <td>@employee.FirstName</td>
                    <td>@employee.LastName</td>
                    <td>@employee.Phone</td>
                    <td>@employee.Email</td>
                    <td>@employee.JobTitle</td>
                    <td>@employee.WorkDays</td>
                    <td>@employee.WorkHours</td>
                    <td>@employee.LeaveDays</td>
                    <td>
                        <a href="/Admin/EditEmployee/@employee.Id" class="btn btn-warning btn-sm">Düzenle</a>
                        <a href="/Admin/DeleteEmployee/@employee.Id" class="btn btn-danger btn-sm"
                           onclick="return confirm('Bu çalışanı silmek istediğinize emin misiniz?');">Sil</a>
                    </td>
                </tr>
            }
            <a href="/Admin/ListCustomers" class="btn btn-primary mb-3">Müşteri Listele</a>

        </tbody>
    </table>
</div>
